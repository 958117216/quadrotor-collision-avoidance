<launch>
	
    <arg name="soft_top_speed" default="3.0"/>
    <arg name="a_max_horizontal" default="2.0"/>
    <arg name="yaw_on" default="true"/>
    <arg name="max_acceleration_total" default="3.0"/>
    <arg name="min_speed_at_max_acceleration_total" default="10.0"/>

	  <param name="soft_top_speed" type="double" value="$(arg soft_top_speed)"/>
	  <param name="a_max_horizontal" type="double" value="$(arg a_max_horizontal)"/>
	  <param name="yaw_on" type="bool" value="$(arg yaw_on)"/>
    <param name="use_depth_image" type="bool" value="$(arg use_depth_image)"/>
    <param name="max_acceleration_total" type="double" value="$(arg max_acceleration_total)"/>
    <param name="min_speed_at_max_acceleration_total" type="double" value="$(arg min_speed_at_max_acceleration_total)"/>

    <node pkg="trajectory_selector" type="trajectory_selector_node" name="trajectory_selector" output="screen">
    </node>
   
</launch>
